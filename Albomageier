--// UI erstellen
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local ToggleButton = Instance.new("TextButton")
local AutoKill = false

ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.Name = "MLAutoKillUI"

Frame.Size = UDim2.new(0, 200, 0, 100)
Frame.Position = UDim2.new(0, 50, 0, 100)
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.Parent = ScreenGui

ToggleButton.Size = UDim2.new(0, 180, 0, 50)
ToggleButton.Position = UDim2.new(0, 10, 0, 25)
ToggleButton.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
ToggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleButton.Text = "AutoKill: OFF"
ToggleButton.Parent = Frame

ToggleButton.MouseButton1Click:Connect(function()
    AutoKill = not AutoKill
    ToggleButton.Text = "AutoKill: " .. (AutoKill and "ON" or "OFF")
end)

--// AutoKill Funktion
task.spawn(function()
    while true do
        if AutoKill then
            for _, plr in pairs(game.Players:GetPlayers()) do
                if plr ~= game.Players.LocalPlayer and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
                    local enemy = plr.Character
                    local root = enemy:FindFirstChild("HumanoidRootPart")
                    local myRoot = game.Players.LocalPlayer.Character:FindFirstChild("HumanoidRootPart")

                    -- Gegner vor dich setzen
                    if root and myRoot then
                        root.CFrame = myRoot.CFrame * CFrame.new(0, 0, -3) -- vor dir platzieren

                        -- Schaden zufügen (per Berührung)
                        for _, part in pairs(game.Players.LocalPlayer.Character:GetChildren()) do
                            if part:IsA("Tool") or part:IsA("Part") then
                                pcall(function()
                                    firetouchinterest(part, root, 0)
                                    firetouchinterest(part, root, 1)
                                end)
                            end
                        end
                    end
                end
            end
        end
        task.wait(0.5)
    end
end)
