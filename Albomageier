--// Services
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local humanoid = char:WaitForChild("Humanoid")
local hrp = char:WaitForChild("HumanoidRootPart")

--// UI erstellen
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "MuscleLegendsUI"

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 240, 0, 320)
frame.Position = UDim2.new(0, 50, 0, 100)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.Active = true
frame.Draggable = true

-- Tabs
local tabs = {
    AutoKill = Instance.new("TextButton", frame),
    Fly = Instance.new("TextButton", frame),
    Allgemein = Instance.new("TextButton", frame),
    Teleport = Instance.new("TextButton", frame)
}

local contentFrames = {}

local function createTab(name, order)
    local btn = tabs[name]
    btn.Size = UDim2.new(0, 75, 0, 30)
    btn.Position = UDim2.new(0, 10 + (order - 1) * 80, 0, 10)
    btn.Text = name
    btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    btn.TextColor3 = Color3.new(1, 1, 1)

    local content = Instance.new("Frame", frame)
    content.Name = name .. "Content"
    content.Size = UDim2.new(1, -20, 1, -50)
    content.Position = UDim2.new(0, 10, 0, 45)
    content.BackgroundTransparency = 1
    content.Visible = order == 1
    contentFrames[name] = content

    btn.MouseButton1Click:Connect(function()
        for tabName, f in pairs(contentFrames) do
            f.Visible = tabName == name
        end
    end)
end

createTab("AutoKill", 1)
createTab("Fly", 2)
createTab("Allgemein", 3)
createTab("Teleport", 4)

-- Tab: Teleport
local teleportBtn = Instance.new("TextButton", frame)
teleportBtn.Size = UDim2.new(0, 75, 0, 30)
teleportBtn.Position = UDim2.new(0, 10 + (4 - 1) * 80, 0, 10)
teleportBtn.Text = "Teleport"
teleportBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
teleportBtn.TextColor3 = Color3.new(1, 1, 1)

local contentFrameTeleport = Instance.new("Frame", frame)
contentFrameTeleport.Name = "TeleportContent"
contentFrameTeleport.Size = UDim2.new(1, -20, 1, -50)
contentFrameTeleport.Position = UDim2.new(0, 10, 0, 45)
contentFrameTeleport.BackgroundTransparency = 1
contentFrameTeleport.Visible = false

local teleportTargetBox = Instance.new("TextBox", contentFrameTeleport)
teleportTargetBox.Size = UDim2.new(0, 200, 0, 30)
teleportTargetBox.Position = UDim2.new(0, 10, 0, 10)
teleportTargetBox.PlaceholderText = "Teleport to Player Name"
teleportTargetBox.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
teleportTargetBox.TextColor3 = Color3.new(1, 1, 1)
teleportTargetBox.Text = ""

local teleportBtnAction = Instance.new("TextButton", contentFrameTeleport)
teleportBtnAction.Size = UDim2.new(0, 200, 0, 40)
teleportBtnAction.Position = UDim2.new(0, 10, 0, 50)
teleportBtnAction.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
teleportBtnAction.TextColor3 = Color3.fromRGB(255, 255, 255)
teleportBtnAction.Text = "Teleport"

teleportBtn.MouseButton1Click:Connect(function()
    contentFrameTeleport.Visible = not contentFrameTeleport.Visible
end)

teleportBtnAction.MouseButton1Click:Connect(function()
    local targetPlayerName = teleportTargetBox.Text
    if targetPlayerName and targetPlayerName ~= "" then
        local targetPlayer = Players:FindFirstChild(targetPlayerName)
        if targetPlayer and targetPlayer.Character then
            local targetHRP = targetPlayer.Character:FindFirstChild("HumanoidRootPart")
            if targetHRP then
                hrp.CFrame = targetHRP.CFrame
            end
        else
            warn("Player not found or character not loaded.")
        end
    end
end)

-- Hier kannst du weitere Tabs hinzufügen oder Funktionen hinzufügen, wie sie oben im Code erscheinen.
