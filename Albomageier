--// Services & Player
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local humanoid = char:WaitForChild("Humanoid")
local hrp = char:WaitForChild("HumanoidRootPart")

--// UI Setup
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "MuscleLegendsUI"

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 240, 0, 250)
frame.Position = UDim2.new(0, 30, 0, 100)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0

local function createButton(name, yPos)
    local btn = Instance.new("TextButton", frame)
    btn.Size = UDim2.new(0, 220, 0, 45)
    btn.Position = UDim2.new(0, 10, 0, yPos)
    btn.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Text = name .. ": OFF"
    btn.TextScaled = true
    btn.Font = Enum.Font.GothamBold
    return btn
end

local autoKillBtn = createButton("AutoKill", 10)
local flyBtn = createButton("Fly", 65)
local autoClickerBtn = createButton("AutoClicker", 120)

--// AutoKill + AutoPunch
local autoKill = false
autoKillBtn.MouseButton1Click:Connect(function()
    autoKill = not autoKill
    autoKillBtn.Text = "AutoKill: " .. (autoKill and "ON" or "OFF")
end)

task.spawn(function()
    while true do
        if autoKill and player.Character then
            local myChar = player.Character
            local myRoot = myChar:FindFirstChild("HumanoidRootPart")
            for _, plr in pairs(Players:GetPlayers()) do
                if plr ~= player and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
                    local enemy = plr.Character
                    local root = enemy:FindFirstChild("HumanoidRootPart")
                    if root and myRoot then
                        root.CFrame = myRoot.CFrame * CFrame.new(0, 0, -3)
                        for _, part in pairs(myChar:GetChildren()) do
                            if part:IsA("Tool") or part:IsA("Part") then
                                pcall(function()
                                    firetouchinterest(part, root, 0)
                                    firetouchinterest(part, root, 1)
                                end)
                            end
                        end
                    end
                end
            end
        end
        task.wait(0.5)
    end
end)

--// Fly Setup
local flying = false
local speed = 50

local bv = Instance.new("BodyVelocity")
bv.Velocity = Vector3.zero
bv.MaxForce = Vector3.new(9e9, 9e9, 9e9)
bv.Name = "FlyVelocity"

local bg = Instance.new("BodyGyro")
bg.P = 9e4
bg.MaxTorque = Vector3.new(9e9, 9e9, 9e9)
bg.Name = "FlyGyro"

flyBtn.MouseButton1Click:Connect(function()
    flying = not flying
    if flying then
        bv.Parent = hrp
        bg.Parent = hrp
        flyBtn.Text = "Fly: ON"
        flyBtn.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
    else
        bv.Parent = nil
        bg.Parent = nil
        flyBtn.Text = "Fly: OFF"
        flyBtn.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
    end
end)

RunService.Heartbeat:Connect(function()
    if flying then
        local cam = workspace.CurrentCamera
        bg.CFrame = cam.CFrame
        local moveVec = humanoid.MoveDirection
        if moveVec.Magnitude > 0 then
            local direction = cam.CFrame:VectorToWorldSpace(moveVec).Unit
            bv.Velocity = direction * speed
        else
            bv.Velocity = Vector3.zero
        end
    end
end)

--// AutoClicker
local autoClicker = false
local clickInterval = 0.1 -- Zeit in Sekunden zwischen Klicks (kann angepasst werden)

autoClickerBtn.MouseButton1Click:Connect(function()
    autoClicker = not autoClicker
    autoClickerBtn.Text = "AutoClicker: " .. (autoClicker and "ON" or "OFF")
end)

-- Funktion um die Klicks zu simulieren
local function autoClick()
    local tool = char:FindFirstChildWhichIsA("Tool")
    if tool and tool:FindFirstChild("Handle") then
        while autoClicker do
            pcall(function()
                firetouchinterest(tool.Handle, tool.Handle, 0)
                firetouchinterest(tool.Handle, tool.Handle, 1)
            end)
            wait(clickInterval)
        end
    end
end

-- Starte den AutoClicker-Thread
task.spawn(function()
    while true do
        if autoClicker then
            autoClick()
        end
        wait(0.1)
    end
end)

--// Anpassbare Klickfrequenz (in Sekunden)
local userInputService = game:GetService("UserInputService")

local inputBox = Instance.new("TextBox", frame)
inputBox.Size = UDim2.new(0, 200, 0, 30)
inputBox.Position = UDim2.new(0, 10, 0, 180)
inputBox.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
inputBox.TextColor3 = Color3.fromRGB(255, 255, 255)
inputBox.Text = tostring(clickInterval)
inputBox.TextScaled = true
inputBox.Font = Enum.Font.GothamBold
inputBox.PlaceholderText = "Click Interval (s)"

inputBox.FocusLost:Connect(function()
    local newInterval = tonumber(inputBox.Text)
    if newInterval and newInterval > 0 then
        clickInterval = newInterval
    else
        inputBox.Text = tostring(clickInterval)
    end
end)
