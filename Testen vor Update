--// Services
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local humanoid = char:WaitForChild("Humanoid")
local hrp = char:WaitForChild("HumanoidRootPart")

--// GUI erstellen
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "MuscleLegendsUI"

local mainFrame = Instance.new("Frame", gui)
mainFrame.Size = UDim2.new(0, 250, 0, 320)
mainFrame.Position = UDim2.new(0, 40, 0, 100)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.Active = true
mainFrame.Draggable = true

--// Tabs
local tabButtons = {}
local tabFrames = {}

local function createTab(name, position)
    local button = Instance.new("TextButton", mainFrame)
    button.Size = UDim2.new(0, 80, 0, 30)
    button.Position = UDim2.new(0, position, 0, 0)
    button.Text = name
    button.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    button.TextColor3 = Color3.new(1, 1, 1)
    button.Font = Enum.Font.SourceSans
    button.TextSize = 16

    local frame = Instance.new("Frame", mainFrame)
    frame.Size = UDim2.new(0, 250, 0, 290)
    frame.Position = UDim2.new(0, 0, 0, 30)
    frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    frame.Visible = false

    table.insert(tabButtons, button)
    table.insert(tabFrames, frame)

    button.MouseButton1Click:Connect(function()
        for i, f in ipairs(tabFrames) do
            f.Visible = false
        end
        frame.Visible = true
    end)

    return frame
end

local autoKillTab = createTab("AutoKill", 0)
local flyTab = createTab("Fly", 85)
local allgemeinTab = createTab("Allgemein", 170)

tabFrames[1].Visible = true

--// AutoKill Button
local autoKill = false
local autoKillBtn = Instance.new("TextButton", autoKillTab)
autoKillBtn.Size = UDim2.new(0, 220, 0, 40)
autoKillBtn.Position = UDim2.new(0, 15, 0, 10)
autoKillBtn.Text = "AutoKill: OFF"
autoKillBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
autoKillBtn.TextColor3 = Color3.new(1, 1, 1)

autoKillBtn.MouseButton1Click:Connect(function()
    autoKill = not autoKill
    autoKillBtn.Text = "AutoKill: " .. (autoKill and "ON" or "OFF")
end)

--// Kill Aura
local auraEnabled = true
local auraRange = 25
local attackOffset = Vector3.new(0, 3, -3)

local auraBtn = Instance.new("TextButton", autoKillTab)
auraBtn.Size = UDim2.new(0, 220, 0, 40)
auraBtn.Position = UDim2.new(0, 15, 0, 60)
auraBtn.Text = "KillAura: ON"
auraBtn.BackgroundColor3 = Color3.fromRGB(255, 60, 60)
auraBtn.TextColor3 = Color3.new(1, 1, 1)

auraBtn.MouseButton1Click:Connect(function()
    auraEnabled = not auraEnabled
    auraBtn.Text = "KillAura: " .. (auraEnabled and "ON" or "OFF")
    auraBtn.BackgroundColor3 = auraEnabled and Color3.fromRGB(255, 60, 60) or Color3.fromRGB(80, 80, 80)
end)

local rangeBox = Instance.new("TextBox", autoKillTab)
rangeBox.Size = UDim2.new(0, 220, 0, 30)
rangeBox.Position = UDim2.new(0, 15, 0, 110)
rangeBox.PlaceholderText = "Aura Range (z. B. 25)"
rangeBox.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
rangeBox.TextColor3 = Color3.new(1, 1, 1)
rangeBox.Text = ""

rangeBox.FocusLost:Connect(function()
    local val = tonumber(rangeBox.Text)
    if val and val > 0 then
        auraRange = val
    end
end)

--// Fly
local flying = false
local speed = 50

local flyBtn = Instance.new("TextButton", flyTab)
flyBtn.Size = UDim2.new(0, 220, 0, 40)
flyBtn.Position = UDim2.new(0, 15, 0, 10)
flyBtn.Text = "Fly: OFF"
flyBtn.BackgroundColor3 = Color3.fromRGB(50, 150, 255)
flyBtn.TextColor3 = Color3.new(1, 1, 1)

local speedBox = Instance.new("TextBox", flyTab)
speedBox.Size = UDim2.new(0, 220, 0, 30)
speedBox.Position = UDim2.new(0, 15, 0, 60)
speedBox.PlaceholderText = "Fly Speed (z. B. 50)"
speedBox.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
speedBox.TextColor3 = Color3.new(1, 1, 1)
speedBox.Text = ""

local bv = Instance.new("BodyVelocity")
bv.Velocity = Vector3.zero
bv.MaxForce = Vector3.new(9e9, 9e9, 9e9)
bv.Name = "FlyVelocity"

local bg = Instance.new("BodyGyro")
bg.P = 9e4
bg.MaxTorque = Vector3.new(9e9, 9e9, 9e9)
bg.Name = "FlyGyro"

flyBtn.MouseButton1Click:Connect(function()
    flying = not flying
    if flying then
        bv.Parent = hrp
        bg.Parent = hrp
        flyBtn.Text = "Fly: ON"
        flyBtn.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
    else
        bv.Parent = nil
        bg.Parent = nil
        flyBtn.Text = "Fly: OFF"
        flyBtn.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
    end
end)

speedBox.FocusLost:Connect(function()
    local val = tonumber(speedBox.Text)
    if val and val > 0 then
        speed = val
    end
end)

RunService.Heartbeat:Connect(function()
    if flying then
        local cam = workspace.CurrentCamera
        bg.CFrame = cam.CFrame
        local moveVec = humanoid.MoveDirection
        bv.Velocity = moveVec.Magnitude > 0 and cam.CFrame:VectorToWorldSpace(moveVec).Unit * speed or Vector3.zero
    end
end)

--// Auto Tool (AutoHit)
local autoHitEnabled = false

local autoToolBtn = Instance.new("TextButton", allgemeinTab)
autoToolBtn.Size = UDim2.new(0, 220, 0, 40)
autoToolBtn.Position = UDim2.new(0, 15, 0, 10)
autoToolBtn.Text = "Auto Tool: OFF"
autoToolBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
autoToolBtn.TextColor3 = Color3.new(1, 1, 1)

autoToolBtn.MouseButton1Click:Connect(function()
    autoHitEnabled = not autoHitEnabled
    autoToolBtn.Text = "Auto Tool: " .. (autoHitEnabled and "ON" or "OFF")
    autoToolBtn.BackgroundColor3 = autoHitEnabled and Color3.fromRGB(0, 170, 0) or Color3.fromRGB(60, 60, 60)
end)

task.spawn(function()
    while true do
        if autoHitEnabled and player.Character then
            local tool = player.Character:FindFirstChildOfClass("Tool")
            if tool then
                tool:Activate()
            end
        end
        task.wait(0.1)
    end
end)

--// AutoKill Loop
task.spawn(function()
    while true do
        if autoKill and player.Character then
            local myChar = player.Character
            local myRoot = myChar:FindFirstChild("HumanoidRootPart")
            for _, plr in pairs(Players:GetPlayers()) do
                if plr ~= player and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
                    local enemy = plr.Character
                    local root = enemy:FindFirstChild("HumanoidRootPart")
                    if root and myRoot then
                        root.CFrame = myRoot.CFrame * CFrame.new(0, 0, -3)
                        for _, part in pairs(myChar:GetChildren()) do
                            if part:IsA("Tool") or part:IsA("Part") then
                                pcall(function()
                                    firetouchinterest(part, root, 0)
                                    firetouchinterest(part, root, 1)
                                end)
                            end
                        end
                    end
                end
            end
        end
        task.wait(0.5)
    end
end)

--// KillAura Visual + Raycast
RunService.Heartbeat:Connect(function()
    if not auraEnabled or not player.Character or not player.Character:FindFirstChild("HumanoidRootPart") then return end
    local myHRP = player.Character.HumanoidRootPart
    for _, otherPlayer in ipairs(Players:GetPlayers()) do
        if otherPlayer ~= player and otherPlayer.Character and otherPlayer.Character:FindFirstChild("HumanoidRootPart") then
            local enemyChar = otherPlayer.Character
            local enemyHRP = enemyChar:FindFirstChild("HumanoidRootPart")

            for _, part in ipairs(enemyChar:GetChildren()) do
                if part:IsA("BasePart") then
                    if (part.Position - myHRP.Position).Magnitude <= auraRange then
                        enemyHRP.CFrame = myHRP.CFrame * CFrame.new(attackOffset)
                        ReplicatedStorage.rEvents.hitRemote:FireServer(enemyChar)
                        break
                    end
                end
            end
        end
    end
end)
